  <!-- As we can't set a backdrop to have an alpha blending mode via Lua,
       we need this XML template. -->
  <Frame name="PowerAurasGUIHelpPlateBox" virtual="true">
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="Background">
          <Anchors>
            <Anchor point="TOPLEFT" x="2" y="-2" />
            <Anchor point="BOTTOMRIGHT" x="-2" y="2" />
          </Anchors>
          <Color r="0" g="0" b="0" a="0.75" />
        </Texture>
      </Layer>
    </Layers>
    <Frames>
      <Frame parentKey="Highlight" hidden="true">
        <Anchors>
          <Anchor point="TOPLEFT" x="-2" y="2" />
          <Anchor point="BOTTOMRIGHT" x="2" y="-2" />
        </Anchors>
        <Backdrop edgeFile="Interface\TutorialFrame\UI-TutorialFrame-CalloutGlow" alphaMode="ADD">
          <EdgeSize>
            <AbsValue val="8" />
          </EdgeSize>
        </Backdrop>
      </Frame>
      <Frame parentKey="Normal" hidden="false" setAllPoints="true">
        <Backdrop edgeFile="Interface\Buttons\WHITE8X8">
          <EdgeSize>
            <AbsValue val="2" />
          </EdgeSize>
          <BorderColor r="1.0" g="0.8" b="0.0" a="1.0" />
        </Backdrop>
      </Frame>
    </Frames>
  </Frame>
